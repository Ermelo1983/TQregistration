<div class="table-responsive col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th><th>Name</th><th>Checkin Date</th>
                <th>Company</th><th>Email</th><th>Confirmation</th><th>Delete</th>
            </tr>
        </thead>
        <tbody>
          <% @bookings.each_with_index do |booking, i| %>
            <tr>
                <td><p><%= i %></p></td>
                <td><p><%= booking.user.full_name %><br/>
                    (Guest)</p></p></td>
                <td><p><span class="label <%= past? booking.checkin  %>"> <%= booking.checkin.strftime("%D") %></span></p></td>
                <td><p><%= user_company booking.user %></p></td>
                <td><p><%= user_email booking.user %></p></td>
                <td class="col-md-2">
                  <p></p>
                </td>
                <td class="col-md-2"><p>
                    <a class="btn btn-default" href="#"><span class="glyphicon glyphicon-remove-circle"></span></a>
                </p></td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
<div class="pull-right">
    <ul class="pagination">
        <li><a href="#">«</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">»</a></li>
    </ul>
</div>
