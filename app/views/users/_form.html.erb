
  <%= form_for @user,  html: { autocomplete: "off" } do |f| %>

      <div class="form-group">
        <%= f.text_field :first_name, placeholder: "First Name *", class: "form-control" %>
        <%= @user.errors[:first_name].join %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, placeholder: "Last Name *", class: "form-control" %>
        <%= @user.errors[:last_name].join %>
      </div>

    <div class="form-group">
      <%= f.text_field :company, placeholder: "Company", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      <%= @user.errors[:newsletter].join %>
    </div>

    <div class="form-group form-checkbox">
      <p class="text-form text-bold">Would you like to become a free community member of TQ?</p>
      <p class="text-form text-italic">As a member you get premium access to the cafe and will be notified as first when cool stuff is hapenning</p>

      <label>
        <%= f.check_box :newsletter %>
        <p class="text-form text-color">I would like to become a member.</p>
      </label>
    </div>

    <div class="actions">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <%= link_to "Oh wait.. I've done this before", root_path, class: "btn-back btn" %>
      <%= f.submit (@user.new_record? ? "CHECK IN" : "UPDATE"), class: "btn-create" %>
    </div>

  <% end %>
